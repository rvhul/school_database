
<div class="container">

  <h1>Students</h1>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Father's Name</th>
        <th>Emergency Contact</th>
        <th>Date of Birth</th>
        <th>Blood Type</th>
        <th>Section Name</th>
        <th>House Name</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.roll_no %></td>
        <td><%= student.name %></td>
        <td><%= student.address %></td>
        <td><%= student.gender %></td>
        <td><%= student.fathers_name %></td>
        <td><%= student.emergency_contact %></td>
        <td><%= student.dob %></td>
        <td><%= student.blood_type %></td>
        <td><%= student.section_id %></td>
        <td><%= student.house_id %></td>
        <td><%= link_to "Delete", student_path(student), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %></td>
        <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-default" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% if params[:section_id] || params[:house_id] %>
    <%= link_to "Add New Student", new_student_path, class: "btn btn-primary" %>
    <%= link_to "Back", :back, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Add New Student", new_student_path, class: "btn btn-primary" %>
  <% end %>
</div>
